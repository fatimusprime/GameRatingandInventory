using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApplication2
{
    class Program
    {
      
        static void Main(string[] args)
        {

            string libLocation = @"C:\Users\FatimusPrime\Documents\Visual Studio 2015\Projects\ConsoleApplication2\ConsoleApplication2\bin\Debug\gamelist.txt";

            checkLibrary(libLocation);

            Game logGame = new Game();

            logGame.getTitle();
            Console.WriteLine("Thank you for playing {0}!", logGame.Title);

            logGame.getComments();
            Console.WriteLine("So you thought {0}", logGame.Comments);
            Console.WriteLine("Interesting...");

            System.IO.File.AppendAllText(libLocation, logGame.Title + Environment.NewLine);
            System.IO.File.AppendAllText(libLocation, logGame.Comments + Environment.NewLine);

            Console.WriteLine("Do you want to add a rating? y or n");
            string ratingQuestion = Console.ReadLine();

            if (ratingQuestion == "y")
            {
                string ooT = "/10";

                logGame.getRating();
                System.IO.File.AppendAllText(libLocation, logGame.Rating + ooT + Environment.NewLine + Environment.NewLine);
                Console.WriteLine("Thank you!");
            }
            else
            {
                Console.WriteLine("No problem, thank you!");
                System.IO.File.AppendAllText(libLocation, Environment.NewLine);
            }

            Console.ReadLine();
        }


        private static void checkLibrary(string libLocation)
        {
            
            string startingLine = "Library of Games Played With Comments and Rating" + Environment.NewLine + Environment.NewLine;

            if (System.IO.File.Exists(libLocation))
                 {
                Console.WriteLine("Library exists!");
            }
             else
                 {
                Console.WriteLine("Creating Library!");
                System.IO.File.WriteAllText(libLocation, startingLine);
            }
        }

    }

    class Game
    {
        public string Title { get; set; }
        public string Comments { get; set; }
        public string Rating { get; set; }

        public string getTitle()
        {
            Console.WriteLine("What game do you want to log?");

            return
                Title = Console.ReadLine();
        }

        public string getComments()
        {
            Console.WriteLine("What comments do you want to add about {0}?", Title);

            return
                Comments = Console.ReadLine();
        }

        public string getRating()
        {
            Console.WriteLine("What is your rating out of 10?");

            return
                Rating = Console.ReadLine();
        }
    }

}
